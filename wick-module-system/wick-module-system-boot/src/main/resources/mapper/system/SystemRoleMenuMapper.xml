<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wick.module.system.mapper.ISystemRoleMenuMapper">

    <!-- 权限和拥有权限的角色集合的Map -->
    <resultMap id="rolesPremMap" type="com.wick.module.system.model.dto.SystemRolePermsDTO">
        <result property="roleCode" column="role_code"/>
        <collection property="perms" ofType="string" javaType="java.util.Set">
            <result column="perm"/>
        </collection>
    </resultMap>

    <select id="selectRolePermsList" resultMap="rolesPremMap">
        SELECT
            t2.`code` role_code,
            t3.perm
        FROM
            `system_role_menu` t1
            INNER JOIN system_role t2 ON t1.role_id = t2.id AND t2.deleted = 0 AND t2.`status` = 1
            INNER JOIN system_menu t3 ON t1.menu_id = t3.id
        WHERE type = 4
            <if test="roleCode!=null and roleCode.trim() neq ''">
                AND t2.`code` = #{roleCode}
            </if>
    </select>


</mapper>
